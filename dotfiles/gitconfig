[user]
    name = Craig J Perry
    email = craigp84@gmail.com
[core]
    editor = nvim
    pager = less -r
[color]
    ui = auto
[alias]
    ab = rebase --abort
    b = branch
    cam = commit --all -m
    cb = checkout -b
    ci = commit
    co = checkout
    d = diff --ignore-all-space --color-words
    ds = diff --staged --ignore-all-space --color-words
    fix = commit --amend -C HEAD
    l = log --topo-order --first-parent --pretty=format:"%C(auto) %h %ad %an %d %s" --date=short
    la = log --all --topo-order --first-parent --pretty=format:"%C(auto) %h %ad %an %d %s" --date=short
    lg = log --all --oneline --graph --decorate
    r = rebase --interactive master
    s = status --short --branch
    ctop = !git log | grep Author | sort | uniq -c | sort -rn
    ltop = !git ls-files | xargs -n1 git blame --line-porcelain HEAD | grep '^author ' | sort | uniq -c | sort -nr
